# Change directory to ~/coco
cd ~/coco

# Initialize conda/venv environment called "tilo"
source ~/anaconda3/bin/activate tilo   # if conda
# OR for python venv
# source ~/tilo/bin/activate

# Only run in interactive shells
if [[ $- == *i* ]]; then
    read -p "Start JupyterLab? (y/n) " answer
    if [[ $answer == [Yy]* ]]; then
        jupyter lab --no-browser --ip=0.0.0.0
    fi
fi
