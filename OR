import pandas as pd

def aggregate_tabs(xlsx_path):
    return pd.concat(pd.read_excel(xlsx_path, sheet_name=None).values(), ignore_index=True)

def aggregate_and_sectorcount(xlsx_path, *args, **kwargs):
    return sectorcount(aggregate_tabs(xlsx_path), *args, **kwargs)




result = aggregate_and_sectorcount("state_tabs.xlsx")

# if sectorcount expects extra parameters, pass them straight through
result = aggregate_and_sectorcount(
    "state_tabs.xlsx",
    sector="7222",
    yr_qtr="2020-1",
    normalize=True
