import oracledb

# Oracle connection
conn = oracledb.connect(user="your_user", password="your_password", dsn="your_dsn")
cursor = conn.cursor()

# List of IDs to search for
id_list = ['id1', 'id2', 'id3', 'id4']

# Create placeholders dynamically based on the list size
placeholders = ', '.join([':{}'.format(i) for i in range(len(id_list))])

# SQL Query with IN Clause
query = f"""
SELECT * 
FROM your_table 
WHERE id IN ({placeholders})
"""

# Execute the query with the ID list values
cursor.execute(query, dict(enumerate(id_list)))

# Fetch results
results = cursor.fetchall()

# Print results
for row in results:
    print(row)

# Close connection
cursor.close()
conn.close()
