def animate_fields_heatmap(df, delta_col="overall_delta", fields=None, areas=None, save_path=None, interval=1200):
    sub = df.copy()
    if areas is not None:
        sub = sub[sub["area"].isin(areas)]
    all_fields = list(pd.unique(sub["field"]))
    if fields is None:
        fields = all_fields
    else:
        fields = [f for f in fields if f in all_fields]
    fig, ax = plt.subplots(figsize=(10,6))
    def update(i):
        ax.clear()
        f = fields[i]
        d = sub[sub["field"]==f]
        mat = d.pivot_table(index="area", columns="yr_qtr", values=delta_col)
        sns.heatmap(mat, cmap="RdBu_r", center=0, ax=ax, cbar=False)
        ax.set_title(f"{f} | {delta_col.replace('_',' ')}")
        ax.set_xticklabels(ax.get_xticklabels(), rotation=90)
    ani = FuncAnimation(fig, update, frames=len(fields), interval=interval, repeat=True)
    if save_path:
        ani.save(save_path, writer="pillow", fps=max(1, int(1000/interval)))
    plt.show()
