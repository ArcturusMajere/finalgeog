import pandas as pd
from pathlib import Path

def find_common_ids(folder_path,id_col="id"):
    folder=Path(folder_path)
    files=list(folder.glob("*.csv"))
    if not files:
        raise ValueError("No CSV files found")
    common_ids=None
    for file in files:
        df=pd.read_csv(file,usecols=[id_col])
        ids=set(df[id_col].dropna().astype(str))
        if common_ids is None:
            common_ids=ids
        else:
            common_ids&=ids
        if not common_ids:
            break
    return common_ids
