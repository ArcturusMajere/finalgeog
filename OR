
from tqdm import tqdm

def NationalCohort(fiplist, year, quarter, max_workers=8):
    def task(fips):
        try:
            df = NukeCohort(fips, year, quarter)
            if df is not None and not df.empty:
                return df
        except Exception as e:
            print(f"Failed for {fips}: {e}")
        return None

    results = []
    with ThreadPoolExecutor(max_workers=max_workers) as executor:
        futures = {executor.submit(task, fips): fips for fips in fiplist}
        for future in tqdm(as_completed(futures), total=len(fiplist), desc=f"Processing {year} Q{quarter}"):
            result = future.result()
            if result is not None:
                results.append(result)

    return pd.concat(results, ignore_index=True) if results else pd.DataFrame()
